@{
    Layout = "_AdminPage";
    ViewData["Title"] = "Error Log";
}

@model Calla.Data.Errors[]

@if (Model.Length == 0)
{
    <p>No Content</p>
}
else
{
    <table id="output" cellspacing="0">
        <thead>
            <tr>
                <th>Timestamp</th>
                <th>From</th>
                <th>On</th>
                <th>Message</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var row in Model)
            {
                <tr id="row-@row.Id">
                    <td>@row.Timestamp</td>
                    <td>@row.From</td>
                    <td>@row.On</td>
                    <td>@row.Message</td>
                    <td>
                        <button type="button" onclick='console.log(@row.ErrorObject)'>Log object</button>
                    </td>
                    <td>
                        <button type="button" onclick="deleteItem(@row.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}