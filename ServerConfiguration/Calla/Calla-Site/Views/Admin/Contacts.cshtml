@{
    Layout = "_AdminPage";
    ViewData["Title"] = "Page Views";
}

@model Contacts[]

@if (Model.Length == 0)
{
    <p>No Content</p>
}
else
{
    <table id="output" cellspacing="0">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Room</th>
                <th>Created</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var row in Model)
            {
            <tr id="row-@row.Id">
                <td>@row.Name</td>
                <td>@row.Email</td>
                <td>@row.Room</td>
                <td>@row.Timestamp</td>
                <td>
                    <button type="button" onclick="deleteItem(@row.Id)">Delete</button>
                </td>
            </tr>
            }
        </tbody>
    </table>
}